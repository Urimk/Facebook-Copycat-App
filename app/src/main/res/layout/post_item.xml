<!-- res/layout/post_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Profile Picture and Display Name -->
    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile_pic"
            android:layout_alignParentStart="true"/>

        <!-- Display Name -->
        <TextView
            android:id="@+id/displayNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/profileImageView"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

    <!-- Post Text -->
    <TextView
        android:id="@+id/postContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the post content."
        android:layout_below="@id/profileLayout"
        android:layout_marginTop="8dp"/>

    <!-- Post Image -->
    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/postContentTextView"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"/>

    <!-- Date of the Post -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours ago"
        android:textSize="12sp"
        android:layout_below="@id/postImageView"
        android:layout_marginTop="8dp"/>


    <!-- Like, Share, Comment Buttons -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dateTextView"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/likeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Like"/>

        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"/>

        <Button
            android:id="@+id/commentButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comment"/>
    </LinearLayout>

    <!-- EditText for adding comments (Initially set to GONE) -->
    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsLayout"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:hint="Add a comment..."/>

    <!-- Post Button (Initially set to GONE) -->
    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsLayout"
        android:layout_marginTop="8dp"
        android:text="Post"
        android:visibility="gone"/>
</RelativeLayout>

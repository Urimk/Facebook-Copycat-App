<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Menu with Search Bar -->
    <RelativeLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Add your search bar widget here -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:padding="8dp"/>

        <!-- Add other menu items as needed -->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/writePostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topMenuLayout"
        android:padding="16dp">

        <!-- ImageButton for image upload on the left -->
        <ImageButton
            android:id="@+id/imageUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_image_upload" />

        <!-- EditText for post text in the center -->
        <EditText
            android:id="@+id/postEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageUploadButton"
            android:layout_toStartOf="@+id/postButton"
            android:hint="Write your post"
            android:padding="8dp"/>

        <!-- Post Button on the right -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Post"/>

    </RelativeLayout>


    <ListView
        android:id="@+id/postsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/writePostLayout"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

</RelativeLayout>

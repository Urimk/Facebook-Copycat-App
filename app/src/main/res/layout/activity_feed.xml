<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/windowBackground"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_pfp"
            android:layout_alignParentStart="true"/>

        <!-- Username -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JohnDoe"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/profileImageView"
            android:layout_marginStart="8dp"
            android:textColor="?attr/colorPrimaryDark"/>

        <!-- Dark Mode Toggle -->
        <ToggleButton
            android:id="@+id/darkModeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:layout_toStartOf="@+id/logoutButton"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/purple"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <!-- Top Menu with Search Bar -->
    <RelativeLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBarLayout"
        android:padding="16dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="8dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/writePostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topMenuLayout"
        android:padding="16dp">

        <!-- ImageButton for image upload on the left -->
        <ImageButton
            android:id="@+id/imageUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_image_upload" />

        <!-- EditText for post text in the center -->
        <EditText
            android:id="@+id/postEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageUploadButton"
            android:layout_toStartOf="@+id/postButton"
            android:hint="Write your post"
            android:padding="8dp"/>

        <!-- Post Button on the right -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/purple"
            android:text="Post"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wallInfoLayout"
        android:layout_below="@id/topBarLayout"
        android:visibility="gone">

        <!-- ImageButton for image upload on the left -->
        <ImageView
            android:id="@+id/wallPfp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_image_upload" />

        <!-- EditText for post text in the center -->
        <TextView
            android:id="@+id/wallUsernick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/wallPfp"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/addFriend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_toEndOf="@+id/wallUsernick"
            android:src="@drawable/add_friend" />
    </RelativeLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/writePostLayout">
    <ListView
        android:id="@+id/postsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>

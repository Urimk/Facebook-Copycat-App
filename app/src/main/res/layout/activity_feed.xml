<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_profile_pic"
            android:layout_alignParentStart="true"/>

        <!-- Username -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JohnDoe"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/profileImageView"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"/>

        <!-- Dark Mode Toggle -->
        <ToggleButton
            android:id="@+id/darkModeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:layout_toStartOf="@+id/logoutButton"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <!-- Top Menu with Search Bar -->
    <RelativeLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBarLayout"
        android:padding="16dp">

        <!-- Add your search bar widget here -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:padding="8dp"/>

        <!-- Add other menu items as needed -->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/writePostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topMenuLayout"
        android:padding="16dp">

        <!-- ImageButton for image upload on the left -->
        <ImageButton
            android:id="@+id/imageUploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_image_upload" />

        <!-- EditText for post text in the center -->
        <EditText
            android:id="@+id/postEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageUploadButton"
            android:layout_toStartOf="@+id/postButton"
            android:hint="Write your post"
            android:padding="8dp"/>

        <!-- Post Button on the right -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Post"/>

    </RelativeLayout>


    <ListView
        android:id="@+id/postsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/writePostLayout"
        android:nestedScrollingEnabled="true"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

</RelativeLayout>
